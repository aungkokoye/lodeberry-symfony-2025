{% extends 'base.html.twig' %}

{% block title %}Reset Password Email{% endblock %}

{% block body %}
    <div class="container">
        {% include '/component/message/form_error.html.twig' with {'form': form} %}
        {% include '/component/message/fail.html.twig' with {'key': 'reset-password-email-error'} %}
        {% include '/component/message/success.html.twig' with {'key': 'reset-password-email-success'} %}

        <div class="row bg-light ">
            <div class="col-4 mt-4 mb-5">

                <h1 class="h3 mb-3 font-weight-normal">User Reset Password Email</h1>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}