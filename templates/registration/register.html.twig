{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        {% include '/component/message/form_error.html.twig' with {'form': registrationForm} %}
        {% include '/component/message/fail.html.twig' with {'key': 'verify-email-error'} %}

        <div class="row bg-light ">
            <div class="col-4 mt-4 mb-5">

                <h1 class="h3 mb-3 font-weight-normal">Please register</h1>

                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_end(registrationForm) }}

            </div>
        </div>

        <div class="row  bg-light pb-2">
            <a href="{{ path('app_resend_verify_email') }}" class="link-info">Resend User Verified Email!</a>
        </div>
    </div>
{% endblock %}