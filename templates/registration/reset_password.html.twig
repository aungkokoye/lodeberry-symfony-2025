{% extends 'base.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            {% for message in app.flashes('reset-password-success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="row">
            {% for message in app.flashes('reset-password-error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="row bg-light ">
            <div class="col-4 mt-4 mb-5">

                <h1 class="h3 mb-3 font-weight-normal">User Reset Password </h1>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}