{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

<div class="container">
    <hr>
    <br>
    <div class="row">
        <div class="col-md-3 mb-5">
            <a class="nav-link text-primary" href="{{ path('app_order')}}">
                <i class="fa fa-archive fa-3x"></i> Your Order List
            </a>
        </div>
        <div class="col-md-3 mb-5">
            <a class="nav-link text-primary" href="{{ path('app_user_password_change')}}">
