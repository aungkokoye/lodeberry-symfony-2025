    <hr>
    <hr>

    <br>
    <div class="row">
        <div class="col-md-3 mb-5">
            <a class="nav-link text-secondary" href="{{ path('app_admin_order_view')}}">
                <i class="fa fa-th fa-3x"></i> Admin Order View/Update
            </a>
        </div>
    </div>

    {% endif %}

</div>

